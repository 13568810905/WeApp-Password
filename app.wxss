@import 'util/style/iconfont.wxss';
/*
 * 色彩定义
 */

text {
  color: #0A0909;
  font-family: Arial, Helvetica, sans-serif;
}

page {
  background-color: #fcfcfc;
}

.mainBlue {
  background-color: #207ad4;
}

.lightBlue {
  background-color: #60b0ff;
}

.darkBlue {
  background-color: #143a76;
}

.mainRed {
  background-color: #ac5155;
}

.mainYellow {
  background-color: #e79841;
}

.mainGreen {
  background-color: #afebeb;
}
.mainWhite{
  background-color: #fff;
}
.mainWhite text{
  color:#000;
}

/*
 * 公共样式
 */

/* 公共 FlexBox 主轴纵向左起排列  */
.flexBox {
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  justify-content: flex-start;
}
/* 全局卡片 */
.card {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  border-radius: 15rpx;
  padding: 20rpx;
  margin: 15rpx 30rpx;
}

.cardInfo {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.cardDesc{
    font-size: 30rpx;
    opacity: 0.6;
}
.cardContent{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}
.cardCode{
    font-size: 100rpx;
}
/* 全局选项 */
.optionCard{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: initial;
  border-radius: 0rpx;
  padding: 30rpx 40rpx 30rpx 20rpx;
  margin: 10rpx 0rpx;
  box-shadow: inset 0 -0.175em #0C0C0C, inset 0 -0.2em #000;
}
.optionInfo{
  text-align: right;
}
.optionText{
  flex: 1;
}
.optionDesc{
  font-size: 35rpx;
  opacity: 0.5;
}
.optionContent{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
  padding-bottom: 20rpx;
}

.optionName{
  font-size: 45rpx;
  text-align: left;
}


/* 工具类 */
.copyright{
  text-align: center;
  font-size: 30rpx;
  color: #F1F0F0;
  opacity: 0.8;
  margin: 30rpx;
}
progress{
  margin-bottom: 10rpx;
}